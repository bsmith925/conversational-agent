# .env.example
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_USERNAME=user
DATABASE_PASSWORD=password1230
DATABASE_NAME=vectordb
DATABASE_HOST=postgres
DATABASE_PORT=5432

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_TTL=3600

# LLM Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
LLM_MODEL=openrouter/google/gemini-2.5-pro
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2

# RAG Settings
RAG_K=3
RETRIEVAL_SIMILARITY_THRESHOLD=0.3
CHAT_HISTORY_LIMIT=20
LLM_MAX_TOKENS=4096

# Application Settings
LOG_LEVEL=INFO
ALLOW_DB_RECREATION=false

# API Settings
API_TITLE=Conversational Agent API
API_VERSION=1.0.0
API_PREFIX=/api/v1
